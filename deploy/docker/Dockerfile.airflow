# deploy/docker/Dockerfile.airflow
FROM apache/airflow:2.9.1-python3.11

USER root

RUN mkdir -p /opt/airflow/data/raw /opt/airflow/data/processed \
    && chown -R airflow:airflow /opt/airflow/data

# DAGs und Pipeline-Code kommen Ã¼ber das Volume aus docker-compose
ENV AIRFLOW__CORE__DAGS_FOLDER=/opt/airflow/data_pipeline/dags

USER airflow
