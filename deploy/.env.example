# ============================================================
# CR3BP Project - Environment Configuration (Example)
# Copy this file to .env and adjust values as needed.
# ============================================================

# -----------------------------
# Postgres base configuration
# -----------------------------
POSTGRES_PASSWORD=cr3bp_password

# -----------------------------
# Shared CR3BP database settings
# Used by Airflow, loaders, HNN training, and local scripts
# -----------------------------
DB_HOST=postgres
DB_PORT=5432
DB_NAME=cr3bp_db
DB_USER=cr3bp_user
DB_PASSWORD=cr3bp_password

# Optional full database URL (used if present)
CR3BP_DATABASE_URL=postgresql+psycopg2://cr3bp_user:cr3bp_password@postgres:5432/cr3bp_db

# -----------------------------
# pgAdmin
# -----------------------------
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin

# -----------------------------
# Airflow security
# -----------------------------
AIRFLOW_FERNET_KEY=abc123
AIRFLOW__WEBSERVER__SECRET_KEY=abc123

# -----------------------------
# Airflow admin user
# -----------------------------
AIRFLOW_ADMIN_USERNAME=admin
AIRFLOW_ADMIN_PASSWORD=admin
AIRFLOW_ADMIN_FIRSTNAME=Admin
AIRFLOW_ADMIN_LASTNAME=User
AIRFLOW_ADMIN_EMAIL=admin@example.com

# -----------------------------
# Airflow core / database settings
# IMPORTANT: must match the DAG location inside the container
# -----------------------------
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://cr3bp_user:cr3bp_password@postgres:5432/cr3bp_db
AIRFLOW__DATABASE__LOAD_DEFAULT_CONNECTIONS=False
AIRFLOW__CORE__DAGS_FOLDER=/opt/airflow/data_pipeline/dags
